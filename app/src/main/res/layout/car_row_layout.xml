<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/car_image_view"
                android:layout_width="95dp"
                android:padding="12dp"
                android:background="@drawable/shape_square"
                android:layout_height="95dp"
                android:src="@mipmap/car_default" />

            <TextView
                android:id="@+id/car_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/car_image_view"
                android:layout_toRightOf="@id/car_image_view"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_make_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_name_tv"
                android:layout_toEndOf="@id/car_image_view"
                android:layout_toRightOf="@id/car_image_view"
                android:paddingLeft="16dp"

                android:textSize="12sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/car_model_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:textSize="12sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>